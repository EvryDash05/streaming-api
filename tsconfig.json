{
  "compilerOptions": {
    "target": "es2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist"
  },
  "ts-node": {
    "esm": true,
    "compiler": "typescript"
  },
  "include": ["src/**/*.ts", "index.ts"],
  "exclude": ["node_modules"]
}
